<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Pipelines.Runner.Listener</AssemblyName>
    <RootNamespace>Pipelines.Runner.Listener</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.Core.Api" />
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.Tools">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Pipelines.Core\Pipelines.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\Pipelines.Core\Protos\runner.proto" GrpcServices="Server" />
    <Protobuf Include="..\Pipelines.Core\Protos\joblog.proto" GrpcServices="Server" />
  </ItemGroup>

</Project>
